@model MobileApplication.Models.UserModel
@{
    ViewData["Title"] = "AddRole";
}

<h1>AddRole</h1>
<form method="post">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)                                
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
                @Html.HiddenFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
                @Html.HiddenFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsAdmin)
            </dt>
            <dd class="col-sm-10">
                <input type="checkbox" asp-for="IsAdmin" name="IsAdmin" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsAppUser)
            </dt>
            <dd class="col-sm-10">
                <input type="checkbox" asp-for="IsAppUser" name="IsAppUser" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsDealer)
            </dt>
            <dd class="col-sm-10">
                <input type="checkbox" asp-for="IsDealer" name="IsDealer" />
            </dd>
        </dl>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <div>
        <a asp-action="ManageUserRole">Back to List</a>
    </div>
</form>